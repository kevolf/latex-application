%-- title styles ---------------------------------------------------------------
\renewcommand{\chapterStyle}[1]{%
  \begin{tikzpicture}[remember picture, overlay]
    \fill[
      color=highlight_color
    ] (current page.south west) rectangle ++(\sideBarWidth,\paperheight);
    \node[%
      anchor=north west,
      align=left,
      rotate=90,
      minimum height=\sideBarWidth,
      minimum width=\pageheight,
      font=\LARGE\color{white}
    ] at (current page.south west)
    {\resizebox{!}{0.3\sideBarWidth}{\MakeUppercase{#1}}};
  \end{tikzpicture}
  \raggedleft%
  {%
    \fontsize{120pt}{1em}%
    \upshape%
    \color{highlight_color}%
    \chapterlabel
  }
}
\renewcommand{\sectionStyle}[1]{%
  \raggedleft%
  {%
    \fontsize{14pt}{1em}%
    \scshape%
    \addfontfeature{LetterSpace=8.0}%
    \MakeUppercase{#1}%
  }
}
\renewcommand{\subsectionStyle}[1]{%
  \fontsize{12pt}{1em}%
  \scshape%
  #1%
}

