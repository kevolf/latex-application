%-- title styles ---------------------------------------------------------------
\renewcommand{\chapterStyle}[1]{%
  \begin{tikzpicture}[remember picture, overlay]
    \fill[
      color=highlight_color
    ] (current page.south west) rectangle ++(\sideBarWidth,\paperheight);
  \end{tikzpicture}
  \marginParagraph{%
    \raggedleft
    {%
      \fontsize{120pt}{1em}%
      \upshape%
      \color{white}%
      \chapterlabel%
    }%
  }{%
    {%
      \fontsize{42pt}{1em}%
      \upshape%
      \color{highlight_color}%
      {\MakeUppercase{#1}}%
    }%
  }%
}
\renewcommand{\sectionStyle}[1]{%
  \raggedleft%
  {%
    \fontsize{14pt}{1em}%
    \scshape%
    \addfontfeature{LetterSpace=8.0}%
    \MakeUppercase{#1}%
  }%
}
\renewcommand{\subsectionStyle}[1]{%
  \raggedleft%
  {%
    \slshape%
    \color{light_color}%
    #1%
  }%
}

